{
  "name": "@xeel-dev/cli-python-plugin",
  "version": "1.1.0",
  "description": "A plugin to add python ecosystem support for Xeel",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xeel-dev/cli-python-plugin.git"
  },
  "scripts": {
    "prebuild": "shx rm -rf dist",
    "build": "tsc -b",
    "postpack": "shx rm -f oclif.manifest.json",
    "prepack": "oclif manifest",
    "prepare": "husky",
    "lint": "prettier --check 'src/**/*.ts'",
    "lint:fix": "prettier --write 'src/**/*.ts'"
  },
  "author": "felix@xeel.dev",
  "license": "MIT",
  "packageManager": "pnpm@9.14.2",
  "dependencies": {
    "@actions/exec": "^1.1.1",
    "@oclif/core": "^4"
  },
  "devDependencies": {
    "@oclif/prettier-config": "^0.2.1",
    "@types/node": "20",
    "@xeel-dev/cli": "^1.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "shx": "^0.3.4",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "oclif": {
    "bin": "xeel-python-plugin",
    "dirname": "cli-python-plugin",
    "commands": "./dist/commands",
    "hooks": {
      "register-ecosystem": "./dist/hooks/register-ecosystem.js"
    },
    "topicSeparator": " "
  }
}